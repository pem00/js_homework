<%- include ("header") -%>
<div class="container mt-2">
    <h1>Edit Alien</h1>
    <form action="/alien/edit/<%= alien.id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= alien.name %>" required>
        <br>

        <label for="species">Species:</label>
        <input type="text" id="species" name="species" value="<%= alien.species %>" required>
        <br>

        <label for="technology">Technology Level:</label>
        <select id="technology" name="technology">
            <option value="Low" <%= alien.technology === 'Low' ? 'selected' : '' %>>Low</option>
            <option value="Medium" <%= alien.technology === 'Medium' ? 'selected' : '' %>>Medium</option>
            <option value="High" <%= alien.technology === 'High' ? 'selected' : '' %>>High</option>
        </select>
        <br>

        <button type="submit">Save Changes</button>
    </form>